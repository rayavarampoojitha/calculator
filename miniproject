#include <stdio.h>
int sum(int a,int b)
{
  return a + b;
}
int sub(int a,int b)
{
  return a - b;
}
int mul(int a,int b)
{
  return a * b;
}
int div(int a,int b)
{
  if(b == 0)
  {
    printf("Division by zero\n");
  }
  else
  {
    printf("Division : %d\n", a/b);
  }
}
int main()
{
    int a,b;
    int choice;
    while(1)
    { 
      printf("USER MENU:\n");
       printf(" 1.Addition \n");
       printf(" 2.Subtraction \n");
       printf(" 3.Multiplication \n");
       printf(" 4.Division \n");
       printf(" 5.Exit \n");
    
     printf("Enter your choice\n");
       scanf("%d", &choice);
    printf("Enter two numbers:\n");
    scanf("%d %d", &a,&b);
    switch(choice)
    {
      case 1:
          printf("Addition of two numbers: %d\n", sum(a,b));
          break;
       case 2:
          printf("Subtraction of two numbers: %d\n", sub(a,b));
          break;
      case 3:
          printf("Multiplication of two numbers: %d\n", mul(a,b));
          break;
      case 4:
          printf("Division of two numbers: %d\n", div(a,b));
          break;
      case 5:
            printf("Exit\n");
            printf("Program Terminated\n");
      default:
           printf("Enter correct choice\n");
    }

}
    return 0;
}
